{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "width": 400,
    "height": 410,
    "padding": {"right": 10},
    "title": {"text": "Trust in the government - OECD Countries", "color": "gray"},
    "autosize": "fit",
    "background": "#f3fafa",
    "view": {"fill": "#f3fafa"},
  
    "signals": [
      {
        "name": "k", "value": 38,
        "bind": {"input": "range", "min": 10, "max": 38, "step": 1}
      },
      {
        "name": "op", "value": "max"
      },
      {
        "name": "label",
        "value": {"average": "Average", "median": "Median", "sum": "Total"}
      },
        {
      "name": "tooltip",
      "value": {},
      "on": [
        {"events": "rect:mouseover", "update": "datum"},
        {"events": "rect:mouseout",  "update": "{}"}
      ]
    }
    ],

  
    "data": [
      {
        "name": "source",
        "url": "https://raw.githubusercontent.com/belinda-chan/Assignment2/main/Trust%20in%20Government%20OECD.json",
        "transform": [
          {
            "type": "filter",
            "expr": "datum.Country != null && datum['Score'] != null"
          }
        ]
      },
      {
        "name": "ranks",
        "source": "source",
        "transform": [
          {
            "type": "aggregate",
            "groupby": ["Country"],
            "ops": [{"signal": "op"}],
            "fields": ["Score"],
            "as": ["Score"]
          },
          {
            "type": "window",
            "sort": {"field": "Score", "order": "descending"},
            "ops": ["row_number"], "as": ["rank"]
          }
        ]
      },
      {
        "name": "Country",
        "source": "source",
        "transform": [
          {
            "type": "lookup",
            "from": "ranks",
            "key": "Country",
            "values": ["rank"],
            "fields": ["Country"]
          },
          {
            "type": "formula",
            "as": "Category",
            "expr": "datum.rank < k ? datum.Country : 'All Others'"
          },
          {
            "type": "aggregate",
            "groupby": ["Category"],
            "ops": [{"signal": "op"}],
            "fields": ["Score"],
            "as": ["Score"]
          }
        ]
      }
    ],
  
    "marks": [
      {
        "type": "rect",
        "from": {"data": "Country"},
        "encode": {
                    "enter": {
          "x": {"scale": "x", "field": "Country"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "amount"},
          "y2": {"scale": "y", "value": 0}
        },
          "update": {
            "x": {"scale": "x", "value": 0},
            "x2": {"scale": "x", "field": "Score"},
            "y": {"scale": "y", "field": "Category"},
            "height": {"scale": "y", "band": 1},
            "fill": {
              "value":{
                "gradient": "linear",
                "stops":[
                  {"offset": 0.1, "color": "#FFCECE"}
                ]
              }
            }
          },           "hover": {
          "fill": {"value": "#FD7EC2"}
        }
        }
      },
            {
      "type": "text",
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "black"}
        },
        "update": {
          "y": {"scale": "y", "signal": "tooltip.Category", "band": 1},
          "x": {"scale": "x", "signal": "tooltip.Score", "offset": 17},
          "text": {"signal": "tooltip.Score"},
          "fillOpacity": [
            {"test": "isNaN(tooltip.Score)", "value": 0},
            {"value": 1}
          ]
        }
      }
    }
    ],
  
    "scales": [
      {
        "name": "x",
        "type": "linear",
        "domain": {"data": "Country", "field": "Score"},
        "range": "width",
        "nice": true
      },
      {
        "name": "y",
        "type": "band",
        "domain": {
          "data": "Country", "field": "Category",
          "sort": {"op": "max", "field": "Score", "order": "descending"}
        },
        "range": "height",
        "padding": 0.1
      }
    ],
  
    "axes": [
      {
        "scale": "x",
        "orient": "bottom",
        "format": "d",
        "tickCount": 10
      },
      {
        "scale": "y",
        "orient": "left"
      }
    ]
  }
