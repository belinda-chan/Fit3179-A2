{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
      "background": "#f3fafa",
       "view": {"fill": "#f3fafa"},
    "width": 400,
    "height": 400,
    "config": {"legend": {"orient": "top", "layout": {"top": {"anchor": "middle"}}, "title": null}},
    "title": "Top 100 Life Expectancy 2020",
    "data": {
    "url": "https://raw.githubusercontent.com/belinda-chan/Assignment2/main/Top%20100%20Life%20Expectancy.csv"
    },
    "encoding":{
      "x": {
    "field": "Male",
    "type": "quantitative",
    "title": "Male life expectancy",
    "axis": {"tickCount": 7},
    "scale": {"domain": [70, 84]}
    },
    "y": {
    "field": "Female",
    "type": "quantitative",
    "axis": {"tickCount": 7},
    "scale": {"domain": [74, 90]}
    }}, 
    "layer":[
      {"selection": {
    "region_highlight": {
    "type": "multi",
    "fields": ["Region"],
    "bind": "legend"}
    }, "mark": "circle",
    "encoding": {
      "size":{"value":200},
       "color": {
         "legend": {"offset": 5, "padding":10},
    "field": "Region",
    "type": "nominal",
    "scale": {
    "domain": [
    "N. America",
    "S. America",
    "Europe",
    "Africa",
    "Asia",
    "Oceania",
    "World"
    ],
    "range": [
   "#8CE4D4", "#ffa099", 
     "#FFD673", 
     "#D59376", "#769CD5",
     "#F5487D",
    "black"
    ]
    }},
    "opacity": {
    "condition": {"selection": "region_highlight", "value": 0.5},
    "value": 0.10
    },
   
    "tooltip": [
    {"field": "Country", "type": "nominal"},
    {"field": "Region", "type": "nominal"},
    {"field": "Rank", "type": "nominal"},
    {"field": "Male", "type": "quantitative"},
    {"field": "Female", "type": "quantitative"}
    ]}
      }, {
        "mark":{
          "type": "text",
    "fontSize": 10,
    "fontStyle": "italic"},
    "encoding": {
    "text": {"field": "Country", "type": "nominal"},
    "color": {"value": "black"},
    "opacity": {
    "condition": {
    "test": "datum['Country'] == 'Finland' || datum['Country'] == 'Denmark' || datum['Country'] == 'Sweden'",
    "value": 1},
    "value": 0
    }
   
    }
   
      }, {
        "mark":{
          "type": "text",
    "fontSize": 10,
    "dy":12,
    "dx":12,
    "fontStyle": "italic"},
    "encoding": {
    "text": {"field": "Country", "type": "nominal"},
    "color": {"value": "black"},
    "opacity": {
    "condition": {
    "test": "datum['Country'] == 'Iceland'|| datum['Country'] == 'World average'",
    "value": 1},
    "value": 0
    }
   
    }
   
      },
      {
        "mark":{
          "type": "text",
    "fontSize": 10,
    "dy":6,
    "fontStyle": "italic"},
    "encoding": {
    "text": {"field": "Country", "type": "nominal"},
    "color": {"value": "black"},
    "opacity": {
    "condition": {
    "test": "datum['Country'] == 'Norway'",
    "value": 1},
    "value": 0
    }
   
    }
   
      }
    ]
   }
